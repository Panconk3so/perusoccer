@model perusoccer.Models.Jugador

<h1>Registro de Jugadores</h1>

<form asp-controller="Jugador" asp-action="Create" >
    <label for="Name">Nombre del Jugador:</label>
    <br>
    <input type="text" id="Name" name="Name" required>
    <br>
    <label for="Age">Edad:</label><br>
    <input type="number" id="Age" name="Age" required>
    <br>
    <label for="Gender">Género:</label>
    <br>
    <input type="radio" id="GenderMale" name="Gender" value="Masculino" required>
    <label for="GenderMale">Masculino</label>
    <input type="radio" id="GenderFemale" name="Gender" value="Femenino">
    <label for="GenderFemale">Femenino</label>
    <br>
    <label for="Club">Club:</label>
    <br>
    <select id="Club" name="Club" required>
        <option value="U">Universitario</option>
        <option value="Alianza">Alianza Lima</option>
        <option value="Cristal">Sporting Cristal</option>
        <option value="Cienciano">Cienciano</option>
    </select>
    <br>
    <label for="Category">Categoría:</label>
    <br>
    <input type="checkbox" id="CategorySub17" name="Category" value="Sub 17">
    <label for="CategorySub17">Sub 17</label>
    <input type="checkbox" id="CategorySub20" name="Category" value="Sub 20">
    <label for="CategorySub20">Sub 20</label>
    <input type="checkbox" id="CategoryMayores" name="Category" value="Mayores">
    <label for="CategoryMayores">Mayores</label>
    <br>
    <label for="Seasons">Temporadas (hasta 4):</label>
    <input type="number" id="Seasons" name="Seasons" min="1" max="4" required>
    <br>
    <label for="HasFaltas">¿Ha tenido faltas?</label>
    <input type="checkbox" id="HasFaltas" name="HasFaltas" value="true">
    <label for="HasFaltas">Sí</label>
    <input type="checkbox" id="HasFaltas" name="HasFaltas" value="false">
    <label for="HasFaltas">No</label>
    <br>
    <button type="submit">Registrar</button>
</form>

@if (Model != null)
{
    <div>
        <h2>Resultado</h2>
        <p>Jugador: @Model.Name</p>
        <p>Edad: @Model.Age</p>
        <p>Género: @Model.Gender</p>
        <p>Club: @Model.Club</p>
        <p>Categorías: @string.Join(", ", Model.Categories)</p>
        <p>Temporadas: @Model.Seasons</p>
        <p>Ha tenido faltas: @((Model.HasFaltas) ? "Sí" : "No")</p>
        <p>Monto Total: @Model.TotalAmount.ToString("C")</p>
    </div>
}